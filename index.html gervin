<div class="cart-bar">
    <div>
        <strong>Items in Cart:</strong> <span id="cart-count">0</span><br>
        <strong>Total:</strong> ‚Ç±<span id="cart-total">0.00</span>
    </div>
    <button class="checkout-btn" onclick="checkout()">Checkout Now</button>
</div>

<script>
    // The "Logic"
    let cart = [];
    let total = 0;

    function addToCart(itemName, price) {
        // 1. Add item to our data list
        cart.push(itemName);
        
        // 2. Update the total price
        total += price;

        // 3. Update the Screen (DOM)
        document.getElementById('cart-count').innerText = cart.length;
        document.getElementById('cart-total').innerText = total.toFixed(2);
        
        console.log("Added " + itemName + ". Cart is now: ", cart);
    }

    function checkout() {
        if (cart.length === 0) {
            alert("Your cart is empty! Order some Chickenjoy first.");
        } else {
            alert("Order Received! \n\nItems: " + cart.join(", ") + "\nTotal: ‚Ç±" + total.toFixed(2) + "\n\nBida ang saya!");
            
            // Clear cart after checkout
            cart = [];
            total = 0;
            document.getElementById('cart-count').innerText = "0";
            document.getElementById('cart-total').innerText = "0.00";
        }
    }
</script>

